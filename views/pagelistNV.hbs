<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên</th>
            <th scope="col">Tuổi</th>
            <th scope="col">Lương</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each dataNV}}
        <tr>
            <th scope="row">{{@index}}</th>
            <td>{{ten}}</td>
            <td>{{tuoi}}</td>
            <td>{{luong}}</td>
            <td>
                <form method="get" action="upNV">
                    <button name="idEdit" value={{_id}} class="btn btn-info" type="submit">Sửa</button>
                </form>
                 <div class="container ml-4">
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                data-bs-target="#myModal">
                                Xoá
                            </button>
                        </div>
                        <!-- The Modal -->
                        <div class="modal" id="myModal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                        <h4 class="modal-title">Do You Want To Remove This
                                            Product</h4>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-footer">
                                        <form method="get" action="deleteNV">
                                            <input type="hidden" name="idNV" value="{{_id}}" />
                                            <button type="submit" class="btn btn-danger">Yes</button>
                                        </form>
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">No</button>
                                    </div>
                                </div>
                            </div>
                        </div>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>